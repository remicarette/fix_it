<div id="chatbox">
  <div class="title d-flex flex-column justify-content-around">
    <div class="d-flex justify-content-around align-items-center">
      <div class="">Chat with nom de l'entreprise</div>
    </div>
    <div class="d-flex justify-content-around">
      <div class="green-bar pt-1"></div>
    </div>
  </div>

  <div class="messages pb-2">
    <div class="message receive">
      <div class="message-receiver">Message receive</div>
    </div>
    <div class="message send pt-2">
      <div class="message-sender">Message send 1</div>
    </div>
    <div class="message send pt-2">
      <div class="message-sender">Message send 2</div>
    </div>
  </div>

  <div class="chat">
    <%= simple_form_for [@booking, @message] do %>
      <%= f.input :content %>
      <%= f.submit :content %>
    <% end %>
  </div>
</div>
