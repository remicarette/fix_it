<div id="chatbox">
  <div class="title d-flex justify-content-center align-items-center bg-orange text-white border-bottom">
      Chat with <%= user_pro.full_name %>
  </div>

  <div id="messages" class="messages pb-2 overflow-auto">
    <% messages.each do |message| %>
      <div class="message <%= message.sender == current_user ? "send pt-2" : "receive"%>">
        <div class="<%= message.sender == current_user ? "message-sender" :  "message-receiver" %>"><%= message.content %></div>
      </div>
    <% end %>
  </div>

  <div class="chat">
    <%= render 'bookings/form_chat', user_pro: user_pro, message: message %>
  </div>
</div>
