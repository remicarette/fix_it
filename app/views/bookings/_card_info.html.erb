<div id="card-info">
  <div class="infos">

    <!-- AVATAR -->
    <div class="">
      <%= image_tag @booking.pro.photo, alt: "alttext", class:"avatar-pro" %>
    </div>

    <!-- PRO FULL NAME -->
    <div class="title text-center">
      <%= @booking.pro.full_name %>
    </div>

    <!-- INFOS -->
    <div class="card-info-item info text-center">
      Vos infos
    </div>
    <div class="green-bar"></div>

    <!-- BRAND -->
    <%= render "card_info_item", info: "#{@booking.equipement.brand}" %>

    <!-- MODEL -->
    <%= render "card_info_item", info: "#{@booking.equipement.model}" %>

    <!-- BOOKING -->
    <div class="card-info-item rdv text-center">
      Rendez vous le <%= l(@booking.begin) %> <%# @booking.begin, format: '%d/%m/%Y %k:%M' %>
    </div>
  </div>
</div>
