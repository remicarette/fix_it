<!-- HOME  SCREEN-->
<div class="banner-home"></div>
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-8 col-lg-6 offset-lg-6 ">
        <div class="booking-form mt-5">
          <%= simple_form_for "", url: profiles_path, method: :get do |f| %>

            <p class="p-form-home">Où est votre problème?</p>
            <%= f.input :zip_code,
                        as: :string,
                        required: false,
                        label: false,
                        placeholder: "59180",
                        input_html: { class: "input-home" } %>

            <p class="p-form-home">Quel est votre modèle?</p>
            <%= f.input :model,
                        required: false,
                        label: false,
                        collection: ["Frisquet", "Viessmann", "Atlantic", "Weishaupt", "Vergne"],
                        input_html: { class: "input-home" } %>
            <%= submit_tag "Trouver votre pro", name: nil, class: "btn btn-outline-primary input-home mb-0" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>



