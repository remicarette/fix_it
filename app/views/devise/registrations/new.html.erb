<div class="container-fluid">
  <div class="row justify-content-around my-2 py-3 font-family: 'Roboto'">
    <div class="col-7 p-5">
      <div class="form-group pl-3 pr-5 border-right border-dark">
        <h2 class="text-center">Rejoignez nous</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
        <div class="form-row  pt-3 px-2">
          <div class="col-6 form-group">
          <%= f.input :first_name,
                      required: true,
                      label: false,
                      autofocus: true,
                      placeholder: "Prénom",
                      input_html: { autocomplete: "last_name", class: "input-home" } %>
          </div>
          <div class="col-6 form-group">
          <%= f.input :last_name,
                      required: true,
                      label: false,
                      autofocus: true,
                      placeholder: "Nom",
                      input_html: { autocomplete: "last_name", class: "input-home" } %>
          </div>
        </div>
        <div class=" col-12 form-group">
          <%= f.input :address,
                      required: true,
                      label: false,
                      autofocus: true,
                      placeholder: "Adresse",
                      input_html: { autocomplete: "address", class: "input-home" } %>
        </div>
        <div class="form-row px-2">
          <div class="col-6 form-group">

          <%= f.input :zip_code,
                      required: true,
                      label: false,
                      autofocus: true,
                      placeholder: "Code Postal",
                      input_html: { autocomplete: "zip_code", class: "input-home" } %>
          </div>
          <div class="col-6 form-group">
          <%= f.input :city,
                      required: true,
                      label: false,
                      autofocus: true,
                      placeholder: "Ville",
                      input_html: { autocomplete: "city", class: " input-home" } %>
          </div>
        </div>
        <div class="form-group col-12">
          <%= f.input :email,
                      required: true,
                      label: false,
                      autofocus: true,
                      placeholder: "adresse email",
                      input_html: { autocomplete: "email", class: " input-home " }%>
        </div>
        <div class="form-group col-12">
          <%= f.input :password,
                      required: true,
                      label: false,
                      placeholder: "mot de passe",
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class: "input-home" } %>
        </div>
        <div class="form-group col-12">
          <%= f.input :password_confirmation,
                      required: true,
                      label: false,
                      placeholder: "confirmer votre mot de passe",
                      input_html: { autocomplete: "new-password", class: "input-home" } %>
        </div>
        <div class="form-group col-md-4 offset-md-8">
            <%= f.button :submit, "Valider", class:"btn-resume" %>
        </div>
          <% end %>

        <!--Login sur la même page : garde le code de devise en comment.
        <div class="form-group col-12 btn-orange">
          <%= render "devise/shared/links" %>
        </div>
        </div>-->
      </div>
    </div>
    <div class="col-5 pr-5 pt-5 ml-n2 mr-2">
      <h2 class=" d-flex justify-content-center pb-3 px-2">Connectez-vous</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group col-12">
            <%= f.input :email,
                        label: false,
                        required: false,
                        autofocus: true,
                        placeholder: "votre email",
                        input_html: { autocomplete: "email", class: "input-home" } %>
            <%= f.input :password,
                        label: false,
                        required: false,
                        placeholder: "votre mot de passe",
                        input_html: { autocomplete: "current-password", class: "input-home" } %>
            <%= f.input :remember_me, as: (:boolean if devise_mapping.rememberable?),
                        label: "Se souvenir de moi", class: "blue-fix-it-text",
                        input_html: {class: "py-3 checkbox-btn"} %>
          </div>
        <div class="form-group col-md-4 offset-md-8">
          <%= f.button :submit, "Valider", class: "btn-resume" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
