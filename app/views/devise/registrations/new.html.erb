<div class="container-fluid">
  <div class="row-fluid justify-content-center">
    <div class="col-12 col-lg-6 form-group px-4 mx-4"></div>
      <h2 class="input-home">Rejoignez nous</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
    <div class="form-row px-4 mx-4">
      <div class="col-6 form-group">
      <%= f.input :first_name,
                  required: true,
                  label: false,
                  autofocus: true,
                  placeholder: "PrÃ©nom",
                  input_html: { autocomplete: "last_name", class: "input-home" } %>
      </div>
      <div class="col-6 form-group">
      <%= f.input :last_name,
                  required: true,
                  label: false,
                  autofocus: true,
                  placeholder: "Nom",
                  input_html: { autocomplete: "last_name", class: "input-home" } %>
      </div>
    </div>
    <div class="form-group px-4 mx-4">
      <%= f.input :address,
                  required: true,
                  label: false,
                  autofocus: true,
                  placeholder: "Adresse",
                  input_html: { autocomplete: "address", class: "input-home" } %>
    </div>
    <div class="form-row px-4 mx-4">
      <div class="col-6 form-group">

      <%= f.input :zip_code,
                  required: true,
                  label: false,
                  autofocus: true,
                  placeholder: "Code Postal",
                  input_html: { autocomplete: "zip_code", class: "input-home" } %>
      </div>
      <div class="col-6 form-group">
      <%= f.input :city,
                  required: true,
                  label: false,
                  autofocus: true,
                  placeholder: "Ville",
                  input_html: { autocomplete: "city", class: " input-home" } %>
      </div>
    </div>
    <div class="form-group px-4 mx-4">
      <%= f.input :email,
                  required: true,
                  label: false,
                  autofocus: true,
                  placeholder: "adresse email",
                  input_html: { autocomplete: "email", class: " input-home " }%>
    </div>
    <div class="form-group px-4 mx-4">
      <%= f.input :password,
                  required: true,
                  label: false,
                  placeholder: "mot de passe",
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "input-home" } %>
    </div>
    <div class="form-group px-4 mx-4">
      <%= f.input :password_confirmation,
                  required: true,
                  label: false,
                  placeholder: "confirmer votre mot de passe",
                  input_html: { autocomplete: "new-password", class: "input-home" } %>
    </div>
    <div class="form-group px-4 mx-4">
      <div class="form-actions btn-green">
        <%= f.button :submit, "Valider" %>
      </div>
    </div>
      <% end %>
    <div class="form-group px-4 mx-4 btn-orange">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
